
@{
    ViewBag.Title = "Cart";
}


<h2>Your Cart</h2>
@using (Html.BeginForm())
{
<div class="container">

    <!--Oredered Stationary Items-->
    <div class="Oredered Stationary Items container" id="Staionary">
        <h3>Statinary items</h3>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Item Name</th>
                    <th>Amount</th>
                    <th>Quantity</th>
                    <th>total</th>
                </tr>
            </thead>
            <tbody>
                @if (@ViewBag.StationaryItems.Count != 0)
                {
                    for (int i = 0; i < @ViewBag.StationaryItems.Count; i++)
                    {
                        <tr>
                            <td>@ViewBag.StationaryItems[@i]._itemName</td>
                            <td>&#8377;@ViewBag.StationaryItems[@i]._amount</td>
                            <td>@ViewBag.StationaryItems[@i]._count</td>
                            <td>&#8377;@ViewBag.StationaryItems[@i].QuantitesCost</td>
                        </tr>
                    }
                    <tr>
                        <td />
                        <td />
                        <td>Total Cost</td>
                        <td>&#8377;@ViewBag.StationaryItemsCost</td>
                    </tr>
                }
                else
                {
                    <tr rowspan="3">
                        <td colspan="4">You didn't order any Stationary Items</td>
                    </tr>
                }
            </tbody>
            
        </table>
    </div>

    <!--Ordered HouseKeeping Items-->
    <div class="Ordered HouseKeeping Items container" id="HouseKeeping">
        <h3>HouseKeeping Items</h3>
        <table class="table table-hover table-grey">
            <thead>
                <tr>
                    <th>Item Name</th>
                    <th>Amount</th>
                    <th>Quantity</th>
                    <th>total</th>
                </tr>
            </thead>
            <tbody>
                @if (@ViewBag.HouseKeepingItems.Count != 0)
                {
                    for (int i = 0; i < @ViewBag.HouseKeepingItems.Count; i++)
                    {
                        <tr>
                            <td>@ViewBag.HouseKeepingItems[@i]._itemName</td>
                            <td>&#8377;@ViewBag.HouseKeepingItems[@i]._amount</td>
                            <td>@ViewBag.HouseKeepingItems[@i]._count</td>
                            <td>&#8377;@ViewBag.HouseKeepingItems[@i].QuantitesCost</td>
                        </tr>
                    }
                    <tr>
                        <td />
                        <td />
                        <td>Total Cost</td>
                        <td>&#8377;@ViewBag.HouseKeepingItemsCost</td>
                    </tr>
                }
                else
                {
                    <tr rowspan="3">
                        <td colspan="4">You didn't order any Housekeeping Items</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!--Confirm Order-->
    <div class="confirm-order container">
        <button type="submit" data-toggle="modal" data-target="#Order" class="btn btn-primary pull-right">Confirm Order</button>
        @*<label class="pull-right"><strong>Total Cost of All Prodeucts = &#8377;@ViewBag.TotalCost</strong></label>*@
    </div>
    <!--Total Order Popup-->
    <div class="modal fade" id="Order" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Total Order</h4>
                </div>
                <div class="modal-body">
                    <table class="table">
                        <tr>
                            <td>Total Staionary Items Cost</td>
                            <td>@ViewBag.StationaryItemsCost</td>
                        </tr>
                        <tr>
                            <td>Total HouseKeeping Items Cost</td>
                            <td>@ViewBag.HouseKeepingItemsCost</td>
                        </tr>
                        <tr>
                            <td>Total Cost</td>
                            <td>@ViewBag.TotalCost</td>
                        </tr>
                    </table>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-default" onclick="@("window.location.href='" + @Url.Action("Order", "Home") + "'");"  >Order</button>
                </div>
            </div>
        </div>
    </div>
</div>
}

